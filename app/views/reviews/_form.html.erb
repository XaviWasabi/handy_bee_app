<%= simple_form_for([ @business, @review ], remote: true) do |f| %>
<% booking = @business.bookings.find {|booking| booking.customer == current_user }  %>
  <%= f.input :booking_id, as: :hidden, input_html: {value: booking.id }  %>
  <%= f.input :content %>
  <%= f.input :rating, input_html: { min: "1", max: "5", step: "1" } %>
  <%= f.submit "Submit", class: "button-main" %>
<% end %>

