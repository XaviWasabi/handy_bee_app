<div class="top-content">
  <div class="container-fluid">
    <div id="carousel-example" class="carousel slide d-flex justify-content-center" data-ride="carousel" data-interval="false">
      <div class="carousel-inner d-flex mx-auto" style="width: 85%;" role="listbox">
        <% @business.reviews.each do |review| %>
          <% if review == @business.reviews.first %>
            <div class="carousel-item active col-12 col-sm-6 col-md-4 col-lg-4">
          <% else %>
            <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-4">
          <% end %>
              <div class="d-flex w-100" style="flex-direction: column; justify-content: center; align-items: center;">
                <%= render review %>
              </div>
            </div>
        <% end %>
      </div>

      <a class="carousel-control-prev" href="#carousel-example" style="width: 5%;" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carousel-example" style="width: 5%;" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>



