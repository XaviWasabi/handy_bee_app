<div class="review" id="review-">
  <div class="review-rating">
    <% review.rating.times do %>
    <p><i class="fas fa-star"></i></p>
    <% end %>
  </div>
  <p><%= review.content %></p>
  <% if user_signed_in? %>

    <% if review.user_id == current_user.id %>

      <div class="links button-main">

        <%= link_to "Edit", edit_review_path(review), class: "button-main" %>
        <%= link_to "Delete", review_path(review), method: :delete, data: { confirm: "Are you sure?" }, class: "button-main" %>

      </div>
    <% end %>
    <% end %>
  </div>
  <hr>
