<div class="row d-flex justify-content-around" style="margin-top: 40px">
  <h2>My bookings</h2>
</div>

<div>
  <% @bookings.each do |b| %>
    <div class="bookings-index-frame">
      <div class="center">
        <div class="bookings-index-information">
          <ul>
            <h6><strong>Booking with </strong><%= b.contractor.user_name %></h6>
            <p><i class="fas fa-money-check"></i></i>Price: <%= b.price.to_i %>â‚¬</p>
            <p><i class="fas fa-hourglass-start"></i>From: <%= b.start_date %></p>
            <p><i class="fas fa-hourglass-end"></i>To: <%= b.end_date %></p>
            <p><%= b.description %></p>
          </ul>
        </div>
      </div>
      <div class="center">
        <div class="profile">
          <div class="image">
            <div class="circle-1"></div>
              <div class="circle-2"></div>
                <% if b.business.user.picture.attached? %>
                  <%= cl_image_tag b.business.user.picture.key, class: "avatar-index" %>
                <% else %>
                  <%= cl_image_tag("https://res.cloudinary.com/jordannadroj/image/upload/v1613501376/pkvrmhcsxi7i7slo0tcx.jpg", alt: "alttext", class: "avatar-index") %>
                <% end %>
              </div>

              <div class="name"><%= b.business.name %></div>
              <div class="job"><%= b.business.description %></div>

              <!-- buttons -->
              <div class="actions" style="margin-top: 20px">
                <!-- view -->
                <%= link_to "View", business_path(b.business), class: "btn" %>
                <!-- go to chat -->
                <% @chatroom = Chatroom.find_by(contractor_id: b.contractor_id) %>
                <%= link_to "Go to chat",  chatroom_path(@chatroom), class: "btn" %>
              </div>
        </div>

        <!-- cards with icons -->
        <div class="stats">
          <div class="box">
            <i class="fas fa-bolt"></i>
            <span class="parameter"><%= b.business.category %></span>
          </div>
          <div class="box">
            <i class="fas fa-map-marker-alt"></i>
              <span class="value"><%= b.business.location %></span>
          </div>
          <div class="box">
            <i class="fas fa-language"></i>
              <span class="parameter">
                <% b.business.languages.each do |l| %>
                  <%= l.name %>
                <% end %>
              </span>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
