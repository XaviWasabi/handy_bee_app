<div class="container">

<!-- Filter by category -->
<div class="title-index">
 <!-- home-dropdown-banner -->
   <p> <strong> <%= params[:query] %> </strong> </p>
   <p>Business available <strong><%= @businesses_count %></strong> </p>
</div>



  <div class="row d-flex justify-content-around" style="margin-top: 40px">
    <h2><strong><%= @businesses.count %></strong> business available for you</h2>
    <p> <strong> <%= params[:query].split.first.capitalize if params[:query].present? %> </strong> </p>
    <div class="right-inner-addon">
      <i class="icon-search"></i>
      <input type="search" class="form-control" placeholder="Search" style="width: 400px; box-shadow: 0 0 15px rgba(0,0,0,0.1);"/>
    </div>
  </div>


  <!-- dropdown index page
  <div class="dropdown-index-page" style="margin-top: 40px; margin-bottom: 20px;">
    <%= form_tag(businesses_path, method: "get") do %>
      <%= select_tag :query,  options_for_select([["English"], ["German"]], params[:query]), class: "language btn btn-dark", id: "dropdown-filter", include_blank: "Language" %>
      <%= select_tag :query,  options_for_select([["5"], ["4"], ["3"], ["2"], ["1"],], params[:query]), class: "rating btn btn-dark", id: "dropdown-filter", include_blank: "Rating" %>
      <%= select_tag :query,  options_for_select([["50$"], ["100$"], ["200$"], ["300$"]], params[:query]), class: "price btn btn-dark", id: "dropdown-filter", include_blank: "Price" %>
    <% end %>
  </div>


  <!-- view all cards index page -->
  <div class="card-container">
    <% @businesses.each do |business| %>
      <div class="card-index">
        <p id="service-type"><i class="fas fa-briefcase"></i><%= business.category %></p>
        <hr>
        <div class="card-left">
          <% if business.user.picture.attached? %>
            <%= cl_image_tag business.user.picture.key, class: "avatar-index" %>
          <% else %>
            <%= cl_image_tag("https://res.cloudinary.com/jordannadroj/image/upload/v1613501376/pkvrmhcsxi7i7slo0tcx.jpg", alt: "alttext", class: "avatar-index") %>
          <% end %>
        </div>
        <div class="card-body">
          <p>Name: <strong><%= business.name %></strong></p>
          <p>Category: <strong><%= business.category %></strong></p>
          <p>Description: <strong><%= business.description %></strong></p>
        </div>
  <!-- </button> -->
        <div class="">
            <%= link_to "View", business_path(business), class: "button-main-index" %>
        </div>
  <!-- raiting -->
        <div class="card-icons">
          <!-- <p><i class="fas fa-star"></i></p> -->
        </div>
      </div>
    <% end %>
  </div>
</div>

